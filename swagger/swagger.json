{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "notes micro-service"
    },
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/api/v1/notes": {
        "post": {
          "summary": "Create a Note",
          "operationId": "createNote",
          "parameters": [
            {
              "name": "note",
              "in": "body",
              "description": "Create a note",
              "required": true,
              "schema": {
                "$ref": "#/definitions/CreateNote"
              }
            }
          ],
          "responses": {
            "success": {
              "description": "Create a note",
              "schema": {
                "example": {
                  "title": "example title",
                  "content": "Note contents",
                  "notesId": "N_db231277-701d-4a92-9c87-59a0743f200e",
                  "createdAt": "2021-06-20T04:08:11.418Z",
                  "updatedAt": "2021-06-20T04:08:11.418Z"
                }
              }
            }
          }
        }
      },
      "/api/v1/notes/{notesId}": {
        "put": {
          "summary": "Update note's title, content",
          "operationId": "updateNote",
          "parameters": [
            {
              "name": "notesId",
              "in": "path",
              "description": "Internally generated id",
              "required": true
            },
            {
              "name": "note",
              "in": "body",
              "description": "Update a note",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UpdateNote"
              }
            }
          ],
          "responses": {
            "success": {
              "description": "Update a note",
              "schema": {
                "example": {
                  "title": "new title",
                  "content": "updated content",
                  "notesId": "N_db231277-701d-4a92-9c87-59a0743f200e",
                  "createdAt": "2021-06-20T04:08:11.418Z",
                  "updatedAt": "2021-06-20T04:08:11.418Z"
                }
              }
            }
          }
        }
      },
      "/api/v1/notes/": {
        "get": {
          "summary": "Get all notes",
          "operationId": "getNotes",
          "parameters": [
            
          ],
          "responses": {
            "success": {
              "description": "Get all notes",
              "schema": {
                "example": [
                  {
                    "title": "Note1",
                    "content": "Note1 content",
                    "notesId": "N_db231277-701d-4a92-9c87-59a0743f200e",
                    "createdAt": "2021-06-20T04:08:11.418Z",
                    "updatedAt": "2021-06-20T04:08:11.418Z"
                  },
                  {
                    "title": "Note2",
                    "content": "Note2 content",
                    "notesId": "N_86ca8056-5338-4476-933c-8ca59fb7841f",
                    "createdAt": "2021-06-20T23:33:55.361Z",
                    "updatedAt": "2021-06-21T00:26:24.957Z"
                  }
                ]
              }
            }
          }
        },
        "post": {
          "summary": "Search notes by prefix",
          "operationId": "searchNotes",
          "parameters": [
            {
              "name": "prefix",
              "in": "body",
              "description": "prefix of any word to be searched in title or content of the note",
              "required": true,
              "type": "string",
              "default": "cont",
              "schema": {
                "$ref": "#/definitions/SearchNotes"
              }
            }
          ],
          "responses": {
            "success": {
              "description": "Returns notes containing words with the specified prefix in either title or content"
            }
          }
        },
        "delete": {
            "summary": "Delete one or more notes by noteIds",
            "operationId": "deleteNotes",
            "parameters": [
              {
                "name": "notesIds",
                "in": "body",
                "description": "array of noteIds to be deleted",
                "required": true,
                "type": "array",
                "items": {
                  "type": "string"
                },
                "schema": {
                  "$ref": "#/definitions/DeleteNotes"
                }
              }
            ],
            "responses": {
              "success": {
                "description": "Deletes specified notes"
              }
            }
          }
        }
      },
      "definitions": {
        "CreateNote": {
          "type": "object",
          "required": [
            "title"
          ],
          "properties": {
            "title": {
              "type": "string",
              "default": "test title"
            },
            "content": {
              "type": "string",
              "default": "test content"
            }
          }
        },
        "UpdateNote": {
          "type": "object",
          "required": [
            "title"
          ],
          "properties": {
            "title": {
              "type": "string",
              "default": "update test title"
            },
            "content": {
              "type": "string",
              "default": "update test content"
            }
          }
        },
        "SearchNotes": {
          "type": "object",
          "required": [
            "prefix"
          ],
          "properties": {
            "prefix": {
              "type": "string",
              "default": "cont"
            }
          }
        },
        "DeleteNotes": {
          "type": "object",
          "required": [
            "noteIds"
          ],
          "properties": {
            "noteIds": {
              "type": "array",
              "default": [""]
            }
          }
        }
      }
    }
  