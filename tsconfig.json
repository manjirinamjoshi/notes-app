{
    "compilerOptions": {
      "skipLibCheck": true,
      "types": ["jest", "mocha", "node"],
      "module": "commonjs",
      "target": "es6",
      "lib": ["es2015", "es2016", "es2017"],
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "noStrictGenericChecks": true,
      "moduleResolution": "node",
      "allowJs": true,
      "sourceMap": true,
      "outDir": "dist",
      "typeRoots": ["src/@types/*", "node_modules/@types"],
      "baseUrl": ".",
      "paths": {
        "core/*": ["core/*"],
        "models/*": ["models/*"],
        "routes/*": ["routes/*"],
        "services/*": ["services/*"],
        "utils/*": ["utils/*"],
        "db/*": ["db/*"],
        "@types/*": ["@types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude":["node_modules", "**/*.test.js" , "**/*.spec.js"]
  }
  